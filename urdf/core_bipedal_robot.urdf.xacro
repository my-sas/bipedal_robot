<?xml version="1.0"?>
<robot name="bipedal_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<link name="base_link">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="1 1 1" />
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
		<collision>
		    <origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="1 1 1" />
			</geometry>
		</collision>
		<inertial>
            <mass value="1.0"/>
		    <origin xyz="0 0 0"/>
		    <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
		</inertial>
	</link>

	<xacro:macro name="leg" params="name shift">
        <link name="${name}_thigh">
            <visual>
                <origin xyz="0 0 -0.5" rpy="0 0 0"/>
                <geometry>
                    <box size="0.25 0.25 1" />
                </geometry>
                <material name="blue">
                    <color rgba="0 0 1 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.5" rpy="0 0 0"/>
                <geometry>
                    <box size="0.25 0.25 1" />
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
            </inertial>
        </link>

        <link name="${name}_shin">
            <visual>
                <origin xyz="0 0 -0.5" rpy="0 0 0"/>
                <geometry>
                    <box size="0.25 0.25 1" />
                </geometry>
                <material name="blue">
                    <color rgba="0 0 1 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.5" rpy="0 0 0"/>
                <geometry>
                    <box size="0.25 0.25 1" />
                </geometry>
            </collision>
            <inertial>
                <mass value="1.0"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
            </inertial>
        </link>

        <joint name="${name}_hip_joint" type="revolute">
            <parent link="base_link"/>
            <child link="${name}_thigh"/>
            <origin xyz="0 ${shift} -0.5" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit lower="-1.57" upper="1.57" effort="50" velocity="0.5"/>
        </joint>

        <joint name="${name}_knee_joint" type="revolute">
            <parent link="${name}_thigh"/>
            <child link="${name}_shin"/>
            <origin xyz="0 0 -1" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit lower="0.0" upper="1.57" effort="50" velocity="0.5"/>
        </joint>
	</xacro:macro>

	<xacro:leg name="left" shift="0.5"/>
	<xacro:leg name="right" shift="-0.5"/>
</robot>